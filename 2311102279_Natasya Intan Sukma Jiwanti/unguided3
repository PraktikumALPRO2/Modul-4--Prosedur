package main
import "fmt"

func cetakderet(n uint){
	fmt.Print(n)
	for n>1{
		if n%2 == 0{
			n = n/2
		}else{
			n = 3*n + 1
		}
		fmt.Print(" ", n)
	}
	fmt.Print()
}

func main(){
	var n uint
	fmt.Print("Masukkan Suku Pertama *tidak boleh melebihi 1000000: ")
	fmt.Scan (&n)
	if n >= 1 && n < 1000000 {
		cetakderet(n)
	} else {
		fmt.Println("Masukkan Suku Pertama Tidak Valid!")
	}
}
